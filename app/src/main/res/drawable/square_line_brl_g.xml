<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item
        xmlns:android="http://schemas.android.com/apk/res/android">
        <shape>
            <solid android:color="#cccccc" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="2dp"
        android:right="2dp"
        android:left="2dp"> <!--设置只有底部有边框-->
        <shape>
            <solid android:color="#ffffff" />
        </shape>
    </item>
</layer-list>